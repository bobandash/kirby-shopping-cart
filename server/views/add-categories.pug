extends layout 

block content
  div.container
    h1= title
    form(method="POST")
      label(for= "add-categories") Add Categories
      input(type="text"
        name= "add-categories"
        id= "add-categories")
      button.add-category(type="submit") Add
    if errors 
      ul
      each error in errors
        li #{error.msg}
    h2= "Existing Categories"
    table
      thead 
        th Category Name
        th Num Products
        th Update
        th Delete
      tbody 
        each category in categories 
          tr
            td 
              input(type="text" form= category._id value = category.name name = "category-update")
            td #{category.num_products}
            td 
              form(id= category._id method="POST" action = `/admin/categories/update/${category._id}`)
                button Update             
            td
              form(method="POST" action = `/admin/categories/delete/${category._id}`)
                button Delete